# =============================================
# CONFIGURACIÓN DE BASE DE DATOS MYSQL
# =============================================

# URL de conexión a la base de datos
# Formato: jdbc:mysql://[host]:[puerto]/[nombre_base_datos]?[opciones]
spring.datasource.url=jdbc:mysql://localhost:3306/asignaturas?useSSL=false&serverTimezone=UTC&characterEncoding=UTF-8

# Usuario de la base de datos
spring.datasource.username=tu_usuario_mysql

# Contraseña de la base de datos
spring.datasource.password=tu_contraseña_mysql

# Driver de MySQL
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver


# =============================================
# CONFIGURACIÓN JPA / HIBERNATE
# =============================================

# Estrategia DDL (create, update, validate, none)
# - create: Crea tablas nuevas (elimina existentes)
# - update: Actualiza esquema manteniendo datos
# - validate: Valida esquema sin cambios
# - none: No realiza acciones DDL
spring.jpa.hibernate.ddl-auto=update

# Mostrar consultas SQL en consola (true/false)
spring.jpa.show-sql=true

# Formatear consultas SQL para mejor legibilidad
spring.jpa.properties.hibernate.format_sql=true

# Dialecto de Hibernate para MySQL
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQLDialect

# Generar estadísticas de performance (solo desarrollo)
spring.jpa.properties.hibernate.generate_statistics=false


# =============================================
# CONFIGURACIÓN DEL SERVIDOR
# =============================================

# Puerto donde ejecuta la aplicación
server.port=8080

# Context path de la aplicación (opcional)
# server.servlet.context-path=/api

# Configuración de encoding
server.servlet.encoding.charset=UTF-8
server.servlet.encoding.enabled=true
server.servlet.encoding.force=true


# =============================================
# CONFIGURACIÓN DE LOGGING
# =============================================

# Nivel de logging para la aplicación
logging.level.com.enedkiu=INFO

# Nivel de logging para Spring Framework
logging.level.org.springframework=INFO

# Nivel de logging para Hibernate (SQL)
logging.level.org.hibernate.SQL=DEBUG
logging.level.org.hibernate.type.descriptor.sql.BasicBinder=TRACE

# Archivo de logs (opcional)
# logging.file.name=logs/enedkiu-asignaturas.log
# logging.pattern.file=%d{yyyy-MM-dd HH:mm:ss} - %msg%n


# =============================================
# CONFIGURACIÓN SPRING BOOT
# =============================================

# Perfil activo (dev, production)
spring.profiles.active=dev

# Banner de Spring Boot (opcional)
# spring.main.banner-mode=off

# Inicialización de base de datos (para datos de prueba)
spring.sql.init.mode=never


# =============================================
# CONFIGURACIÓN CORS (Para desarrollo frontend)
# =============================================

# Habilitar CORS para desarrollo
# endpoints.cors.allowed-origins=http://localhost:3000
# endpoints.cors.allowed-methods=GET,POST,PUT,DELETE,OPTIONS
# endpoints.cors.allowed-headers=*
# endpoints.cors.allow-credentials=true


# =============================================
# INSTRUCCIONES DE USO
# =============================================
# 1. Copiar este archivo como 'application.properties'
# 2. Reemplazar los valores con tu configuración real
# 3. Asegurar que la base de datos 'asignaturas' exista en MySQL
# 4. Configurar usuario y contraseña correctos de MySQL
# 5. Para producción, cambiar:
#    - spring.jpa.hibernate.ddl-auto=validate
#    - spring.jpa.show-sql=false
#    - logging.level.com.enedkiu=WARN